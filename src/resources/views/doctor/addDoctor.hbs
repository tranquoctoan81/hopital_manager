<div class="container">
    <h2>THÊM THÔNG TIN NHÂN VIÊN</h2>
    <form method="POST" action="/doctor/add_info_doctor" enctype="multipart/form-data">
        <div class="form-group">
            <label for="username">Họ tên nhân viên: </label>
            <input required name="name" type="text" class="form-control" id="nameHandle" placeholder="Nhập ho tên"
                aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label for="username">Hình: </label>
            <input style="    width: 100%;
    height: 100%;" type="file" class="form-control" name="doctor_img" id="customFile" />
        </div>
        <p style="color:red;font-size: 1.5rem;">Chỉ cho phép tải lên các tệp .jpg, .jpeg, hoặc .png!</p>
        <div class="form-group">
            <label for="username">Số chứng chỉ hành nghề: </label>
            <input style="    width: 100%;
    height: 100%;" type="text" class="form-control" id="doc_practicing_certificate"
                name="doc_practicing_certificate" />
        </div>
        <div class="form-group">
            <label for="username">Số điện thoại: </label>
            <input style="    width: 50%;
    height: 100%;" type="number" class="form-control" id="" name="doc_number" />
        </div>
        <div class="form-group">
            <label for="username">Quê quán: </label>
            <input style="    width: 100%;
    height: 100%;" type="text" class="form-control" id="" name="doc_address" />
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Loại nhân viên:</label>
            <div style="
    justify-content: center;
    display: flex;
    JUSTIFY-CONTENT: space-around;
">
                <label style="">Fulltime
                    <input type="radio" checked="" name="type" value="1">
                    <span class="checkmark"></span>
                </label>
                <label>Parttime
                    <input type="radio" name="type" value="2">
                    <span class="checkmark"></span>
                </label>
            </div>
        </div>
        <div class="form-group">
            <label for="username" style="
    margin-top: 2rem;
    display: block;
    text-align: center;
    font-size: 2rem;
">Trực khoa</label>
            {{#each result}}
            <label style="
    display: block;
">
                <input type="radio" name="dep_id" value={{this.dep_id}}>
                <span class="checkmark"></span>
                {{this.dep_name}}
            </label>
            {{/each}}
        </div>
        <button type="submit" class="btn btn-login">Thêm</button>
        <input type="hidden" id="hidden_id" value={{id}}>
    </form>
</div>
<script>
    const nameHandle = document.querySelector('#nameHandle')
    const hidden_id = document.querySelector('#hidden_id')
    nameHandle.onblur = () => {
        const inputValue = nameHandle.value;
        const cleanedValue = cleanAndUpperCase(inputValue);
        const idToString = String(hidden_id.value)
        const withoutSpaces_ = cleanedValue + '_NV' + idToString
        nameHandle.value = withoutSpaces_
        function cleanAndUpperCase(str) {
            const withoutDiacritics = str.normalize('NFD').replace(/[\u0300-\u036f]/g, '');
            const cleanedValue = withoutDiacritics.replace(/\s/g, '').toUpperCase();
            return cleanedValue;
        }
    }
    const doc_practicing_certificate = document.querySelector('#doc_practicing_certificate')
    doc_practicing_certificate.onblur = () => {
        const inputValue = doc_practicing_certificate.value;
        const cleanedValue = cleanAndUpperCase(inputValue);
        const withoutSpaces_ = cleanedValue + '/HCM-CCHN'
        doc_practicing_certificate.value = withoutSpaces_
        function cleanAndUpperCase(str) {
            const withoutDiacritics = str.normalize('NFD').replace(/[\u0300-\u036f]/g, '');
            const cleanedValue = withoutDiacritics.replace(/\s/g, '').toUpperCase();
            return cleanedValue;
        }
    }
</script>
