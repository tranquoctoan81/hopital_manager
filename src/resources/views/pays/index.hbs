<script>
    // Xử lý hiển thị các phần trong biểu mẫu dựa trên lựa chọn thanh toán
    document.addEventListener('DOMContentLoaded', function () {
        const tienMat = document.getElementById('tienMat');
        const chuyenKhoan = document.getElementById('chuyenKhoan');
        const soKhamBenh = document.getElementById('soKhamBenh');
        const dichVu = document.getElementById('dichVu');

        tienMat.addEventListener('change', function () {
            soKhamBenh.style.display = 'block';
            dichVu.style.display = 'block';
        });

        chuyenKhoan.addEventListener('change', function () {
            soKhamBenh.style.display = 'none';
            dichVu.style.display = 'block';
        });
    });
</script>